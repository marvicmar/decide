//Linux
pipeline {
    agent any
    environment {
        CONTAINER_IMAGE = 'decide-image'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build Docker Image') {
            steps {
              dir('docker/') {
                    sh 'docker build -t $CONTAINER_IMAGE .'
                }
            }
        }
       stage('Scan with Trivy') {
          steps {
              script {
                  // Scan the Docker image with Trivy
                  def trivyOutput = sh(script: 'trivy --severity HIGH,CRITICAL --no-progress $CONTAINER_IMAGE', returnStatus: true).trim()
      
                  // Print Trivy output for debugging purposes
                  echo "Trivy Output: ${trivyOutput}"
      
                  // Check the Trivy output and fail the build if vulnerabilities are found
                  if (trivyOutput.contains("CRITICAL") || trivyOutput.contains("HIGH")) {
                      error "Vulnerabilities found. Failing the build."
                  }
              }
          }
       }
    }
}
