//Linux
pipeline {
    agent any
    environment {
        CONTAINER_IMAGE = 'decide-image'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build Docker Image') {
            steps {
              dir('docker/') {
                    sh 'docker build -t $CONTAINER_IMAGE .'
                }
            }
        }
       stage('Scan with Trivy') {
          steps {
              script {
                  sh 'trivy image decide-image'
              }
          }
       }
       stage('Python test') {
           steps {
               // script {
               //     sh 'python3 -m venv venv'
               //     sh 'source venv/source/activate'
               // }
               dir('decide/') {
                   sh './manage.py test'
               }
           }
       }
    }
}

