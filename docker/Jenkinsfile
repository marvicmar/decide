pipeline {
    agent { dockerfile true}

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Imprime el contenido antes de la clonación
                    bat 'dir C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\Decide Github'

                    // Clona el repositorio
                    checkout scm

                    // Imprime el contenido después de la clonación
                    bat 'dir C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\Decide Github'

                    // Construye la imagen Docker desde el Dockerfile en la carpeta "docker"
                    bat 'docker build -t my-docker-image -f docker/Dockerfile .'

                    bat 'echo "Success"'
                }
            }
        }

        
    }
}
